        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"

            android:background="#ECD285"
            android:orientation="horizontal"
            android:padding="2dp"
            app:cardBackgroundColor="#ECD285"
            app:cardCornerRadius="4dp">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"

                    android:scaleType="fitStart"

                    android:src="@drawable/fui_ic_mail_white_24dp"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="5dp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                        <TextView

                            android:id="@+id/imageName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="left
"
                            android:layout_marginStart="5dp"

                            android:textColor="@color/black"
                            android:textSize="27sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="#FFC107" />

                        <ImageView

                            android:id="@+id/imageView3"
                            android:layout_width="54dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/docpro" />

                        <TextView

                            android:id="@+id/docTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left
"
                            android:layout_marginStart="5dp"


                            android:layout_marginTop="5dp"


                            android:textColor="#152CAE"
                            android:textSize="25sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="17dp"
                            android:background="#FFC107" />


                        <ImageView

                            android:id="@+id/imageView2"
                            android:layout_width="54dp"
                            android:layout_height="48dp"
                            app:srcCompat="@drawable/appointmentimg" />


                        <TextView

                            android:id="@+id/docHospital"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_gravity="left
"
                            android:layout_margin="10dp"
                            android:text="hi"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"

                            android:background="#FFC107" />



                        <TextView

                            android:id="@+id/docPro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left
"
                            android:layout_margin="10dp"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                </LinearLayout>
        </LinearLayout>
        <!--</androidx.cardview.widget.CardView>-->


</LinearLayout>