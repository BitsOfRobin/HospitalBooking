<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PatientPrescription">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/medi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"



        android:hint="Medicine 1"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:maxLines="3"
        android:padding="10dp"
        android:textSize="17dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/errMed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"

      />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Dosage 1"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:maxLines="3"
        android:textSize="17dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />



    <TextView
        android:id="@+id/errDos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/med2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:ems="10"
        android:hint="Medicine 2"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:maxLines="3"
        android:padding="10dp"
        android:textSize="17dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/errMed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:hint="dosage 2"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:maxLines="3"
        android:textSize="17dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/errDos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        android:layout_gravity="center_vertical"/>

