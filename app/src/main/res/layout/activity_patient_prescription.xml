<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PatientPrescription">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:text="Medicine 1 "
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9C27B0"
            android:layout_marginLeft="15dp"
            />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/medi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"


            android:hint="Medicine 1"
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:maxLines="3"
            android:padding="10dp"
            android:textSize="17dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
        android:id="@+id/errMed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
            android:layout_marginBottom="10dp"

      />
        <TextView
            android:text="Dosage1 "
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9C27B0"
            android:layout_marginLeft="15dp"
            />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Dosage 1"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:maxLines="3"
        android:textSize="17dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />





    <TextView
        android:id="@+id/errDos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        android:layout_marginBottom="10dp"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Price per Dosage 1  "
            android:textColor="#9C27B0"
            android:textSize="30dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pricePerMed1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="price per Dosage 1"
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:maxLines="3"
            android:textSize="17dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


        <TextView
            android:id="@+id/errPriceMed1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#F44336" />

        <TextView
            android:id="@+id/priceDos1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Price Medicine 1"
            android:textColor="#9C27B0"
            android:textSize="30dp" />


        <TextView
            android:text="Medicine 2 "
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9C27B0"
            android:layout_marginLeft="15dp"
            />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/med2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:ems="10"
        android:hint="Medicine 2"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:maxLines="3"
        android:padding="10dp"
        android:textSize="17dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/errMed2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        android:layout_marginBottom="10dp"
        />
        <TextView
            android:text="Dosage 2 "
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#9C27B0"
            android:layout_marginLeft="15dp"
            />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dos2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:hint="dosage 2"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:maxLines="3"
        android:textSize="17dp"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

