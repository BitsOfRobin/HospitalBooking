<!--        />-->
        <TextView
            android:id="@+id/errDos2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#F44336"
            android:layout_marginBottom="10dp"/>





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Price per Dosage 2  "
            android:textColor="#9C27B0"
            android:textSize="30dp" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pricePerMed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="price per Dosage 2"
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:maxLines="3"
            android:textSize="17dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


        <TextView
            android:id="@+id/errPriceMed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#F44336"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:id="@+id/priceDos2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text=" Price Medicine 2"
            android:textColor="#9C27B0"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Total Price"
            android:textColor="#9C27B0"
            android:textSize="30dp" />









        <Spinner
        android:id="@+id/spinnerMedi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:visibility="visible"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/spinnerMediNurse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="visible"
        tools:visibility="visible"
        android:textColorHint="@color/black"
        />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="Submit" />



    </LinearLayout>


</ScrollView>