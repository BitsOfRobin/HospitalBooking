<!--        />-->
        <TextView
            android:id="@+id/errDos2"
            style="@style/normalStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/price_per_dosage_2"
            android:textColor="#9C27B0"
            style="@style/headerStyle" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pricePerMed2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/price_per_dosage_2"
            android:inputType="numberDecimal"
            android:maxLength="100"
            android:maxLines="3"
            style="@style/normalStyle"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/errPriceMed2"
            style="@style/normalStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/priceDos2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/price_medicine_2"
            android:textColor="#9C27B0"
            style="@style/headerStyle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ECD285"/>

        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="@string/total_price"
            android:textColor="#9C27B0"
            style="@style/headerStyle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ECD285"/>

        <Spinner
            android:id="@+id/spinnerMedi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="visible"
            tools:visibility="visible"
            style="@style/normalStyle"/>

        <Spinner
            android:id="@+id/spinnerMediNurse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:visibility="visible"
            tools:visibility="visible"
            android:textColorHint="@color/black"
            style="@style/normalStyle"/>

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="@string/submit_comment"
            style="@style/buttonStyle"/>
    </LinearLayout>
</ScrollView>