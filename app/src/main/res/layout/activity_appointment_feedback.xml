<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECD285"
    tools:context=".BookingAppointment.Feedback">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Appointment Detail"
            android:layout_gravity="center"
            android:textColor="#9C27B0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/doctorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Doctor Name" />

        <TextView
            android:id="@+id/appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Appointment" />

        <TextView
            android:id="@+id/patientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Patient Name" />


        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:background="#2196F3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Appointment Rating"
            android:layout_gravity="center"
            android:textColor="#9C27B0"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/RateBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Please rate at least 0.5 star">

        <RatingBar
            android:id="@+id/ratingComment"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="false"
            android:numStars="5"
            android:padding="5dp"
            android:stepSize="0.5"
            />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#2196F3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appointment Feedback"
            android:layout_gravity="center"
            android:textColor="#9C27B0"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/firstFeedback"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Friendliness and professionalism of the staff" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/questionOneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Please answer Question 1">

            <RadioGroup
                android:id="@+id/questionOneRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/excellent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Excellent"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/good"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Good" />

                <RadioButton
                    android:id="@+id/fair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fair" />

                <RadioButton
                    android:id="@+id/poor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Poor" />
            </RadioGroup>
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#2196F3"/>

        <TextView
            android:id="@+id/secondFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="2. Clarity of communication from the doctor" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/questionTwoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Question 2">

            <RadioGroup
                android:id="@+id/questionTwoRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <RadioButton
                    android:id="@+id/excellentCommunicate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The doctor communicated clearly and effectively"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/clearCommunicate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The doctor was mostly clear in their communication" />

                <RadioButton
                    android:id="@+id/unclearCommunicate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The doctor's communication was somewhat unclear" />

                <RadioButton
                    android:id="@+id/difficultCommunicate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The doctor's communication was difficult to understand" />
            </RadioGroup>
        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#2196F3"/>

        <TextView
            android:id="@+id/thirdFeedback"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Would you provide other comments about the doctor? (optional)" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/commentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:hint="Comment here."
            android:inputType="textMultiLine"
            android:maxLength="100"
            android:maxLines="3"
            android:padding="10dp"
            android:textSize="17dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/submitComment"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_rounded"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="Submit" />
    </LinearLayout>
</ScrollView>