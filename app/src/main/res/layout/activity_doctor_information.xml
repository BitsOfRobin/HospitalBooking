<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ECD285"
    tools:context=".DoctorInformationManagement.DoctorInformation">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:text="Upload Doctor Image"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/ImgMed"
        android:layout_marginVertical="30dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:text="Doctor Profession "
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#9C27B0"
        />
    <TextView
        android:id="@+id/dotName"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#9C27B0"
        />

    <EditText
        android:id="@+id/dtPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="(Doctor Professional)"
        android:textStyle="italic"
        />


    <TextView
        android:id="@+id/errPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        android:layout_marginBottom="10dp"

        />





    <AutoCompleteTextView
        android:id="@+id/autoCurrentHospital"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/toggle_rounded"
        android:textStyle="italic"
        android:hint="suggestion for hospital"
        android:layout_marginTop="5dp"

        />


    <EditText
        android:id="@+id/dtHos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="(Doctor Hospital)"
        android:textStyle="italic"
        />


    <TextView
        android:id="@+id/errHos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F44336"
        android:layout_marginBottom="10dp"

        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Update Doctor Profile"
        android:id="@+id/updateBtn"
        android:background="@drawable/bg_white_rounded"

        />


</LinearLayout>
</ScrollView>
